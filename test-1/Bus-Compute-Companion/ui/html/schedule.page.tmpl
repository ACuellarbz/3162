{{template "base" .}}
{{define "content"}}
<div>
    <div>
        <h1>Schedule For Busses For Today</h1>
    </div>
    <div>
        <form method = "POST" action="/schedule">
            <input type="hidden" name="_method" value="DELETE">
            <table>
                <tr>
                    <th>Company</th>
                    <th>Beginning</th>
                    <th>Destination</th>
                    <th>           </th>
                </tr>
                <tr>
                    <td>{{.Schedule.CompanyID}}</td>
                    <td>{{.Schedule.BeginningID}}</td>
                    <td>{{.Schedule.DestinationID}}</td>
                    <td><button type="submit">Submit</button></td>
                </tr>
            </table>
        </form>
    </div>
</div>
{{end}}
{{define "css"}}
<style>
    table, td, th {
    border: 1px solid;
  }
table{
    border-collapse: collapse;
}
h1{
    color: blue;
}

</style>
{{ end }}